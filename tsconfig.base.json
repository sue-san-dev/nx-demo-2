{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@nx-demo/client-shell": ["libs/client/shell/feature/src/index.ts"],
      "@nx-demo/directives": ["libs/client/shared/directives/src/index.ts"],
      "@nx-demo/domain": ["libs/shared/domain/src/index.ts"],
      "@nx-demo/environments": ["libs/client/environments/src/index.ts"],
      "@nx-demo/header": ["libs/client/shell/ui/header/src/index.ts"],
      "@nx-demo/home": ["libs/client/home/feature/src/index.ts"],
      "@nx-demo/layout": ["libs/client/shell/ui/layout/src/index.ts"],
      "@nx-demo/pipes": ["libs/client/shared/pipes/src/index.ts"],
      "@nx-demo/prisma": ["libs/api/prisma/src/index.ts"],
      "@nx-demo/resolvers": ["libs/client/shared/resolvers/src/index.ts"],
      "@nx-demo/services": ["libs/client/shared/services/src/index.ts"],
      "@nx-demo/shell": ["libs/api/shell/src/index.ts"],
      "@nx-demo/sidenav": ["libs/client/shell/ui/sidenav/src/index.ts"],
      "@nx-demo/stores": ["libs/client/shared/stores/src/index.ts"],
      "@nx-demo/ui-style": ["libs/client/ui-style/src/index.ts"],
      "@nx-demo/user": ["libs/api/user/src/index.ts"],
      "@nx-demo/utils": ["libs/shared/utils/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
