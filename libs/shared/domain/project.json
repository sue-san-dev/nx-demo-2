{
  "name": "shared-domain",
  "$schema": "../../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/shared/domain/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nx/esbuild:esbuild",
      "outputs": [
        "{options.outputPath}"
      ],
      "options": {
        "outputPath": "dist/libs/shared/domain",
        "main": "libs/shared/domain/src/index.ts",
        "tsConfig": "libs/shared/domain/tsconfig.lib.json",
        "assets": [],
        "generatePackageJson": true,
        "format": [
          "cjs"
        ]
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": [
        "{options.outputFile}"
      ],
      "options": {
        "lintFilePatterns": [
          "libs/shared/domain/**/*.ts",
          "libs/shared/domain/package.json"
        ]
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": [
        "{workspaceRoot}/coverage/{projectRoot}"
      ],
      "options": {
        "jestConfig": "libs/shared/domain/jest.config.ts"
      }
    }
  },
  "tags": [
    "scope:shared",
    "type:util"
  ]
}